<!--pages/home/home.wxml-->
<view class="container">
  <scroll-view class='todoList' scroll-y="true">
    <view class='item' wx:for="{{lists}}" wx:for-index="index" wx:key="{{item.id}}" bindtap='delTodo' data-index="{{index}}">
      <view class="select {{item.finished && 'active'}}"></view>
      <text>{{item.text}}</text>
    </view>
    
  </scroll-view>
  <g-button text="创建任务" size='mini' type='change' bindtap='showConfirm'></g-button>
  <view class="tomato-wrapper">
    <navigator class="tomato" url="/pages/tomato/tomato">
      <g-clock text="点击开始闹钟"></g-clock>
    </navigator>
  </view>
  <g-confirm visible="{{visible}}" placeholder="请输入" bindconfirm="confirmCreate" bindcancel="hideConfirm"></g-confirm>
